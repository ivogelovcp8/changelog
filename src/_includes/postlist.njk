{% extends "main.njk" %}
{% block content %}
  {% for post in pagelist %}
    <div class="content shadow rounded mb-6">
      <div class="p-4">
        <div class="flex items-center">
          <div class="category uppercase rounded tracking-widest font-bold py-1 px-3">{{ post.data.category or "No category" }}</div>
          <div class="flex-1"></div>
          <a class="inline-block bg-black text-white rounded px-3 py-2 text-sm capitalize leading-none hover:underline hover:shadow-glove" href="{{ post.url | url }}">Read more</a>
        </div>
        <h2 class="mt-3 text-2xl font-bold">{{ post.data.title }}</h2>
        <p class="mt-3">{{ post.data.description }}</p>
      </div>
      <div class="bg-gray-100 border px-2 py-1 text-center">{{ post.date.toLocaleString('en-GB', {year: 'numeric', month: 'long', day: 'numeric'}) }}</div>
    </div>
  {% endfor %}
  {% if pagination.href.previous or pagination.href.next %}
    <nav class="flex justify-between px-1">
      {% if pagination.href.previous %}
        <a class="inline-block bg-black text-white px-3 py-2 text-sm leading-none hover:underline hover:shadow-glove" href="{{ pagination.href.previous }}">Previous</a>
      {% endif %}

      {% if pagination.href.next %}
        <a class="inline-block bg-black text-white px-3 py-2 text-sm leading-none hover:underline hover:shadow-glove" href="{{ pagination.href.next }}">Next</a>
      {% endif %}
    </nav>
  {% endif %}
{% endblock %}
