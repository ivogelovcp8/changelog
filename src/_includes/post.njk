{% extends "main.njk" %}
{% block content %}
  <div class="content border rounded mt-2">
    <div class="p-4">
      <div class="flex items-center justify-between">
        <div class="category uppercase rounded tracking-widest font-bold py-1 px-3">{{ category or "No category" }}</div>
        <div class="text-lg">{{ date.toLocaleString('en-GB', {year: 'numeric', month: 'long', day: 'numeric'}) }}</div>
      </div>
      <h2 class="mt-4 mb-3 text-3xl">{{ title }}</h2>
      {% if featuredImage %}
      <img src="{{ featuredImage | url }}" alt="{{ featuredImage }}">
      {% endif %}
      <p class="mt-3">{{ content | safe }}</p>
    </div>
  </div>
{% endblock %}
